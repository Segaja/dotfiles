input=$(printf "lock\nquit sway\nreboot\npoweroff\n" | "$HOME/.local/share/scripts/bemenu" -p "system")

case $input in
  "lock")
    swaylock
    ;;

  "quit sway")
    case $(printf "yes\nno\n" |  "$HOME/.local/share/scripts/bemenu" -p "confirm") in
      "yes")
        swaymsg exit
        ;;
      "no") ;;

    esac
    ;;

  "reboot")
    case $(printf "yes\nno\n" |  "$HOME/.local/share/scripts/bemenu" -p "confirm") in
      "yes")
        systemctl reboot
        ;;
      "no") ;;

    esac
    ;;

  "poweroff")
    case $(printf "yes\nno\n" |  "$HOME/.local/share/scripts/bemenu" -p "confirm") in
      "yes")
        systemctl poweroff
        ;;
      "no") ;;

    esac
    ;;
esac

# vim: :set et sw=2 ts=2 tw=80:
